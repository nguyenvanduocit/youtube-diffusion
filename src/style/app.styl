:root
  --color-background: #ffffff;
  --color-text: #000000;

.dark-theme
  --color-background: #000000;
  --color-text: #ffffff;

body
  background-color: var(--color-background);
  color: var(--color-text);
  height: 100vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  overflow: hidden;

#container
  color: #2c3e50;
  position: relative;
  max-width: 60%;
  max-height: 60%;
#video
  width: 100%;
  max-height 100%;
  height: auto;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 0 120px #0000004d;
#canvas
  position: fixed;
  top: 50%;
  left: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
  z-index: -1;
  overflow: hidden;
#controlPanel
  position: fixed;
  bottom: 10px;
  left: 10px;
  right: 10px;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  backdrop-filter: blur(10px);
  z-index: 1;
  display: grid
  place-items: center
  overflow: hidden
  grid-template-columns: 1fr 1fr 1fr
  border: 1px solid rgba(255, 255, 255, 0.2);
  &:before
    z-index: -1
    content: ''
    position: absolute
    top: 0
    left: 0
    width: var(--video-progress)
    bottom: 0
    background: rgba(0, 0, 0, 0.28)
    pointer-events none
    transition: width 0.5s ease-in-out
#toggleButton
  background-color: transparent;
  border: none;
  outline: none;
  cursor: pointer;
  color: #ffffff;
  font-size: 12px;
  grid-column: 2/3
  text-transform: uppercase;
  mix-blend-mode: screen;
  padding: 10px 20px;
  &:hover
    background-color: rgba(255, 255, 255, 0.2);
